    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Auto-login si no hay token y no es un endpoint público",
                    "const publicEndpoints = ['/register', '/login'];",
                    "const currentPath = pm.request.url.getPath();",
                    "const isPublic = publicEndpoints.some(endpoint => currentPath.endsWith(endpoint));",
                    "",
                    "if (!pm.environment.get('token') && !isPublic) {",
                    "    console.log('No token found, attempting auto-login...');",
                    "    ",
                    "    const loginRequest = {",
                    "        url: pm.environment.get('base_url') + '/login',",
                    "        method: 'POST',",
                    "        header: {",
                    "            'Content-Type': 'application/json'",
                    "        },",
                    "        body: {",
                    "            mode: 'raw',",
                    "            raw: JSON.stringify({",
                    "                email: pm.environment.get('admin_email'),",
                    "                password: pm.environment.get('admin_password')",
                    "            })",
                    "        }",
                    "    };",
                    "    ",
                    "    pm.sendRequest(loginRequest, function (err, response) {",
                    "        if (!err && response.code === 200) {",
                    "            const jsonData = response.json();",
                    "            pm.environment.set('token', jsonData.access_token);",
                    "            console.log('Auto-login successful!');",
                    "        } else {",
                    "            console.log('Auto-login failed:', err || response.code);",
                    "        }",
                    "    });",
                    "}"
                ]
            }
        }
